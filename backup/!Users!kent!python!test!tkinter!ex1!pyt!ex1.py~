import tkinter as tk
import sys
import os

def main_proc():
    global root
    
    #Retreive InputForm Data
    textdata=txt.get("1.0","end")
    
    #None Data 
    if  len(textdata)==1:
        tk.messagebox.showinfo("Invalid　Data", "入力してください。")
        return
    
    #Change your processing
    tk.messagebox.showinfo("title", textdata)
    
    root.destroy()
    sys.exit()

def temp_path(relative_path):
    try:
        #Retrieve Temp Path
        base_path = sys._MEIPASS
    except Exception:
        #Retrieve Current Path Then Error 
        base_path = os.path.abspath(".")
    return os.path.join(base_path, relative_path)


logo=temp_path('test_icon.ico')
root=tk.Tk()

#Display Size
root.geometry('300x300')

#Title Bar
root.title('test')

#Icon
root.iconbitmap(default=logo)

#Label
lb=tk.Label(root,text="入力してください。")
lb.pack(pady=20)

#InputForm
txt=tk.Text(root,width=30,height=10)
txt.pack(padx=10,pady=10)

#Exec Button
btn=tk.Button(root,height=1,width=10,text="検索",command=main_proc)
btn.pack(padx=10,pady=10)

root.mainloop()
root.quit()
