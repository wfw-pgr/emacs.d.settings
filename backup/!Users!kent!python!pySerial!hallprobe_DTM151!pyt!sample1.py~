import serial
import time

# ------------------------------------------------- #
# --- [1] preparation                           --- #
# ------------------------------------------------- #
COM     = "COM3"
COM_lnx = "/dev/ttys0"
bitRate = 9600
timeout = 0.1
ser     = serial.Serial( COM, bitRate, timeout=timeout )
ser.open()

# -- select DC mode -- #
ser.write( b"GD" )

# -- check mode     -- #
ser.write( b"IG" )
time.sleep(1)
recv  = ser.read(1)
table = {"D":"DC mode", "A":"AC mode", "C":"Continuous mode", "V":"triggered mode"}
print( "[RS232C-DTM-151] mode == {0}".format( table["recv"] ) )

# -- field measure  -- #




ser.close()
