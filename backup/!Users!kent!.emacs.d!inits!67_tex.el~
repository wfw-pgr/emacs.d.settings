;; ----------------------------------------- ;;
;;  TeX-Mode                                 ;;
;; ----------------------------------------- ;;
(add-to-list 'auto-mode-alist '("\\.tex\\'" . latex-mode))
(defun flymake-get-latex-args (file-name)
  (list "pdflatex" (list "-file-line-error" "-draftmode" "-interaction=nonstopmode" file-name)))
(defun flymake-get-tex-args (file-name)
  (list "pdflatex" (list "-file-line-error" "-draftmode" "-interaction=nonstopmode" file-name)))

(defun disable-flycheck-mode()
  (interactive)
  (flycheck-mode -1))
(add-hook 'tex-mode-hook 'disable-flycheck-mode)
(add-hook 'latex-mode-hook 'disable-flycheck-mode)
(defun disable-flymake-mode()
  (interactive)
  (flymake-mode -1))
(add-hook 'tex-mode-hook 'disable-flymake-mode)
(add-hook 'latex-mode-hook 'disable-flymake-mode)


