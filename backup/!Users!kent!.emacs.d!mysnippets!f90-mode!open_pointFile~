# -*- mode: snippet -*-
# name: open_pointFile-
# key: open_pointFile-
# --
open(lun,file=trim(inpFile),status="old")
read(lun,*)
read(lun,*) cmt, nlines, ncmp
read(lun,*) cmt, LK, LJ, LI, ncmp
allocate( mshape(ncmp,LI,LJ,LK) )
do k=1, LK
   do j=1, LJ
      do i=1, LI
        read(lun,*) mshape(:,i,j,k)
      enddo
   enddo
enddo
close(lun)

