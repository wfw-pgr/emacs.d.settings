import os, sys


# ========================================================= #
# ===  color print function                             === #
# ========================================================= #

def cprint( statement, color="red" ):

    if ( statement is None ):
        print( "[cprint] statement == ???  >>> cprint( 'text' )" )
        sys.exit()
    
    if   ( color.lower() == "red"  ):
        print( "\033[31m",end="" )
        print( statement )
        print("\033[0m", end=""  )
    elif ( color.lower() == "green" ):
        print( "\033[32m",end="" )
        print( statement )
        print("\033[0m", end=""  )
    elif ( color.lower() == "blue"  ):
        print( "\033[34m",end="" )
        print( statement )
        print("\033[0m", end=""  )
    else:
        print( "[cprint] unknown color :: {0}".format( color ) )
        print( "\033[31m",end="" )
        print( statement )
        print("\033[0m", end=""  )


# ========================================================= #
# ===   Execution of Pragram                            === #
# ========================================================= #

if ( __name__=="__main__" ):
    cprint( "Hello World!!" )
