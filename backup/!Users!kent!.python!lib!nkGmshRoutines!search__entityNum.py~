

# ========================================================= #
# ===  search__entityNum                                === #
# ========================================================= #

def search__entityNum():

eps  = 1.e-5
pt1  = [ -eps, - ( rAir3+eps ),        -eps   ]
pt2  = [ +eps, + ( rAir3+eps ), ( zAir4+eps ) ]
tags = gmsh.model.getEntitiesInBoundingBox( pt1[0], pt1[1], pt1[2], pt2[0], pt2[1], pt2[2], dim=surfDim )
xeq0Surf = []
for tag in tags:
    xeq0Surf.append( tag[1] )
surfPhys["x=0plain"]  = gmsh.model.addPhysicalGroup( surfDim, xeq0Surf, tag=201 )

