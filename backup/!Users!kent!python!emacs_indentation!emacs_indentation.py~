import os, sys, subprocess


# ========================================================= #
# ===  execute emacs indentation                        === #
# ========================================================= #
def emacs_indentation( inpFile=None ):
    if ( inpFile is None ): sys.exit( "[emacs_indentation] inpFile == ???" )
    lspFile = __file__ + "/emacs_indentation.lsp"
    cmd = "emacs -batch {0} -l {1} -f emacs-format-function".format( inpFile, lspFile )
    print( cmd )


# ======================================== #
# ===  実行部                          === #
# ======================================== #
if ( __name__=="__main__" ):
    inpFile = "sample.vts"
    emacs_indentation( inpFile=inpFile )
