module initiatorMod
contains


  ! ====================================================== !
  ! === initialize settings of particle tracking       === !
  ! ====================================================== !
  subroutine initialize__variables
    use variablesMod
    implicit none
    
    xLeng =  xMax - xMin
    yLeng =  yMax - yMin
    zLeng =  zMax - zMin
    dx    = xLeng / dble( LI-1 )
    dy    = yLeng / dble( LJ-1 )
    dz    = zLeng / dble( LK-1 )
    dxInv =  1.d0 / dx
    dyInv =  1.d0 / dy
    dzInv =  1.d0 / dz

    ptime = t_simuStart
    
    return
  end subroutine initialize__variables

  
end module initiatorMod
