;; -----------------------------------------;;
;; | For IDL Mode                          |;;
;; -----------------------------------------;;
;;IDLWAVE Setting ;; 
(autoload 'idlwave-mode "idlwave" "IDLWAVE Mode" t)
(autoload 'idlwave-shell "idlw-shell" "IDLWAVE Shell" t)
(setq auto-mode-alist  (cons '("\\.pro\\'" . idlwave-mode) auto-mode-alist))
(setq load-path (cons "/usr/local/share/emacs/site-lisp" load-path))

;; Change the indentation preferences インデントスタイル ;; 
(setq idlwave-main-block-indent 2   ; default  0
      idlwave-block-indent 2        ; default  4
      idlwave-end-offset -2)        ; default -4
;; Start autoloading routine info after 2 idle seconds アイドル時間 ;; 
(setq idlwave-init-rinfo-when-idle-after 2)
;; Pad some operators with spaces 空白制御 ;;
(setq idlwave-do-actions t
      idlwave-surround-by-blank t)
;; Syntax Highlighting シンタックスハイライト設定 ;; 
(add-hook 'idlwave-mode-hook 'turn-on-font-lock)
;; Automatically start the shell when needed シェルオートスタート ;;
(setq idlwave-shell-automatic-start t)
;; Bind debugging commands with CONTROL and SHIFT modifiers オートデバグ ;; 
(setq idlwave-shell-debug-modifiers '(control shift))
;; Specify the online help files' location.
;(setq idlwave-help-directory "~/.idlwave")
;(setq idlwave-shell-explicit-file-name "/usr/local/itt/idl/idl81/bin/idl")
