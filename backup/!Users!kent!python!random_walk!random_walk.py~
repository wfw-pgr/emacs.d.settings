import numpy as np
import random


# ========================================================= #
# ===  random_walk class                                === #
# ========================================================= #
class random_walk():
    # ------------------------------------------------- #
    # --- [1] initialize class                      --- #
    # ------------------------------------------------- #
    def __init__( self ):

        self.location = np.array( [0,0] )
        self.iterMax  = 100
        self.simuMax  = 1000
        self.results  = np.zeros( (self.simuMax,2) )

    # ------------------------------------------------- #
    # --- [2] one-step random_walk                  --- #
    # ------------------------------------------------- #
    def walk__onestep( self ):
        for kiter in range( self.simuMax ):
            for niter in range( self.iterMax ):
                random.seed()
                x_rand = random.randint( -1, 1 )
                y_rand = random.randint( -1, 1 )
                self.location[0] += x_rand
                self.location[1] += y_rand
            self.results[kiter,:] = self.location[:]
        print( self.results )

    # ------------------------------------------------- #
    # --- [5] plot scatter                          --- #
    # ------------------------------------------------- #
    # def plot__results( self ):
        # ret = np.histogram2d( self.results[:,0], self.results[:,1] )
        # print( ret )

        
# ======================================== #
# ===  実行部                          === #
# ======================================== #
if ( __name__=="__main__" ):
    run = random_walk()
    run.walk__onestep()
