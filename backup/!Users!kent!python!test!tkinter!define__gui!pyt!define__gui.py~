import os, sys
import tkinter     as tk
import tkinter.ttk as ttk

# ========================================================= #
# ===  define_gui                                       === #
# ========================================================= #
def define__gui( title="gui title", width=400, height=400 ):

    # ------------------------------------------------- #
    # --- [1] arguments                             --- #
    # ------------------------------------------------- #
    
    # ------------------------------------------------- #
    # --- [2] define gui application                --- #
    # ------------------------------------------------- #
    frame = tk.Tk()
    frame.title   ( title )
    frame.geometry( "{0}x{1}".format( width, height ) )
    gui__template( frame, width=width, height=width )
    frame.mainloop()
    
    return()


# ========================================================= #
# ===  gui__template.py                                 === #
# ========================================================= #

class gui__template( tk.Frame ):

    # ========================================================= #
    # ===  initialize                                       === #
    # ========================================================= #
    def __init__( self, root=None, width=400, height=400 ):
        super().__init__( root, width=width, height=height, \
                          borderwidth=3, relief="groove" )
        self.root = root
        self.pack()
        self.pack_propagate(0) # to stop shrinking into minimum size. 
        self.create__widgets()

    # ========================================================= #
    # ===  create widgets                                   === #
    # ========================================================= #
    def create__widgets( self ):
        return
    
    
# ========================================================= #
# ===   Execution of Pragram                            === #
# ========================================================= #

if ( __name__=="__main__" ):

    width  = 400
    height = 400
    
    define__gui( width=width, height=height )
