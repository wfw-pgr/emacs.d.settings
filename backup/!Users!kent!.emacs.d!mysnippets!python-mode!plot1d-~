# -*- mode: snippet -*-
# name: plot1d-
# key: plot1d-
# --
import sys
import numpy                  as np
import myStyle.LoadConfig     as lcf
import myStyle.plot1D         as pl1
import myStyle.configSettings as cfs
import IORoutines.dat2dct     as d2d

# ========================================================= #
# ===  display                                  === #
# ========================================================= #
def display( datFile=None, pngFile=None, config=None ):
    # ------------------------------------------------- #
    # --- [1] Arguments                             --- #
    # ------------------------------------------------- #
    if ( datFile is None ): datFile = "out.dat"
    if ( pngFile is None ): pngFile = "out.png"
    if ( config  is None ): config  = lcf.LoadConfig()

    # ------------------------------------------------- #
    # --- [2] Fetch Data                            --- #
    # ------------------------------------------------- #
    Data   = d2d.dat2dct( inpFile=datFile )
    xAxis  = Data["xxx"]
    yAxis  = Data["yyy"]

    # ------------------------------------------------- #
    # --- [3] config Settings                       --- #
    # ------------------------------------------------- #
    cfs.configSettings( configType="plot1D_def", config=config )
    config["xTitle"]         = "xxx"
    config["yTitle"]         = "yyy"
    config["plt_xAutoRange"] = True
    config["plt_yAutoRange"] = True
    config["plt_xRange"]     = [-5.0,+5.0]
    config["plt_yRange"]     = [-5.0,+5.0]
    config["plt_linewidth"]  = 1.0
    config["xMajor_Nticks"]  = 5
    config["yMajor_Nticks"]  = 5

    # ------------------------------------------------- #
    # --- [4] plot Figure                           --- #
    # ------------------------------------------------- #
    fig = pl1.plot1D( config=config, FigName=pngFile )
    fig.addPlot( xAxis=xAxis, yAxis=yAxis, label="y1" )
    fig.addLegend()
    fig.setAxis()
    fig.writeFigure()


# ======================================== #
# ===  実行部                          === #
# ======================================== #
if ( __name__=="__main__" ):
    import myUtils.genArgs as gar
    args    = gar.genArgs()
    display()
