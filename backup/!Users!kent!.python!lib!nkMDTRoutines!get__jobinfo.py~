import os, sys, subprocess

# ========================================================= #
# ===  get__jobinfo                                    === #
# ========================================================= #

def get__jobinfo():

    import nkUtilities.genArgs as gar
    args = gar.genArgs()

    if ( args["job"] is None ):
        print( " job >> ??? ", end="" )
        args["job"] = str( input() )

    job     = args["job"]
    jobDir  = os.path.join( os.environ["mdtRoot"], "job/", job ) + "/"
    cnfFile = "{0}cnf/unified.conf".format( jobDir )

    import nkUtilities.load__constants as lcn
    config = lcn.load__constants( inpFile=cnfFile )

    ret = {"job":job, "jobDir":jobDir, "args":args, "cnfFile":cnfFile, "config"=config }
