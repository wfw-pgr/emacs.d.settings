# ----------------------------------------------- #
# --- コマンド alias                           --- #
# ----------------------------------------------- #
# -- open コマンド -- #
alias firefox="open -a Firefox"
alias evince='open'
alias eom='open'
# -- grep コマンド -- #
alias grep="grep --color=auto"

# ----------------------------------------------- #
# --- 補完の設定                               --- #
# ----------------------------------------------- #
# -- 補完について -- #
if [ -e /usr/local/share/zsh-completions ]; then
    fpath=(/usr/local/share/zsh-completions $fpath)
fi
autoload -Uz compinit
compinit -u
# -- 大文字小文字区別なし補完 -- #
zstyle ':completion:*' matcher-list '' 'm:{[:lower:][:upper:]}={[:upper:][:lower:]}'

# -- Ctrl+Dでログアウトしてしまうことを防ぐ -- #
setopt IGNOREEOF

# -- 文字コード指定 -- #
export LC_ALL=ja_JP.UTF-8

# ----------------------------------------------- #
# --- 外観の設定                               --- #
# ----------------------------------------------- #
# -- ls の色 -- #
alias ls='gls --color=auto'
export LSCOLORS=gxfxcxdxbxegedabagacad

# -- プロンプトの色 -- #
# 色を使用
autoload -Uz colors
colors
PS1="%{$fg[cyan]%}[${USER}@${HOST%%.*} %1~]%(!.#.$)${reset_color} "
PROMPT_USER="%{$fg[cyan]%}${USER}${reset_color}"
PROMPT_att="%{$fg[white]%}@${reset_color}"
PROMPT_HOST="%{$fg[cyan]%}${HOST%%.*} ${reset_color}"
PROMPT_DIR="%{$fg[magenta]%}%(5~,%-1~/.../%2~,%~)${reset_color}"
PROMPT_mark="%{$fg[white]%} $ ${reset_color}"
PROMPT=${PROMPT_USER}${PROMPT_att}${PROMPT_HOST}${PROMPT_DIR}${PROMPT_mark}

