# ----------------------------------------------- #
# --- oh-my-zsh 読み込み                      --- #
# ----------------------------------------------- #
source ~/.zshrc_by_ohmyzsh

# ----------------------------------------------- #
# --- コマンド alias                          --- #
# ----------------------------------------------- #
# -- open コマンド -- #
alias firefox="open -a Firefox"
alias evince='open'
alias eom='open'
# -- grep コマンド -- #
alias grep="grep --color=auto"
# --- locate の更新用命令をlinuxと同様に      --- #
alias updatedb="sudo /usr/libexec/locate.updatedb"
# --- paraview 起動                           --- #
alias paraview='/Applications/ParaView-5.8.0.app/Contents/MacOS/paraview'

# ----------------------------------------------- #
# --- 補完の設定                              --- #
# ----------------------------------------------- #
# -- 文字コード指定 -- #
export LC_ALL=ja_JP.UTF-8
# -- 補完について -- #
if [ -e /usr/local/share/zsh-completions ]; then
    fpath=(/usr/local/share/zsh-completions $fpath)
fi
autoload -U compinit
compinit
# -- 大文字小文字区別なし補完 -- #
zstyle ':completion:*' matcher-list 'm:{[:lower:]}={[:upper:]}' '+m:{[:upper:]}={[:lower:]}'

# -- Ctrl+Dでログアウトしてしまうことを防ぐ -- #
setopt IGNOREEOF

# ----------------------------------------------- #
# --- 外観の設定                               --- #
# ----------------------------------------------- #
# -- ls の色 -- #
# alias ls='gls --color=auto'
alias ls='ls -G'
export LSCOLORS=gxfxbxbxdxegedabagacad

# -- プロンプトの色 -- #
# 色を使用
autoload -U colors
colors
PROMPT_USER="%F{cyan}${USER}"
PROMPT_HOST="%F{white}@%F{cyan}${HOST%%.*} "
PROMPT_DIR="%F{magenta}%(5~,%-1~/.../%2~,%~)"
PROMPT_MARK="%F{white} $ "
PROMPT=${PROMPT_USER}${PROMPT_HOST}${PROMPT_DIR}${PROMPT_MARK}

