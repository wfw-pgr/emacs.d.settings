export PYCONFIGFILE=$HOME/.python/default.conf
export gmshLibraryPath=$HOME/gmsh/pygmshLibrary
export PYTHONSTARTUP=$HOME/.python/pythonstartup.py
export PYTHON_ERROR_HANDLING_MODE=wait

# -- setting for tcl-tk ( tkinter ) -- #
export PATH="/usr/local/opt/tcl-tk/bin:$PATH"

# -- デフォルトセッティングス -- #
# export PYCONFIGFILE=$HOME/.python/lib/myStyle/default.conf

