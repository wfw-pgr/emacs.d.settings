import sys
import numpy as np

# ========================================================= #
# ===  generate sample .cst like vector Field Data      === #
# ========================================================= #
def sample__vectorData():

    header1 = "x [m] y [m]  z [m] BxRe [T] ByRe [T] BzRe [T]"
    header2 = "---------------------------------------------"

    import nkUtilities.equiSpaceGrid as esg
    x1MinMaxNum = [ 0.0, 1.0, 101 ]
    x2MinMaxNum = [ 0.0, 1.0, 101 ]
    x3MinMaxNum = [ 0.0, 1.0, 11  ]
    ret         = esg.equiSpaceGrid( x1MinMaxNum=x1MinMaxNum, x2MinMaxNum=x2MinMaxNum, \
                                     x3MinMaxNum=x3MinMaxNum, returnType = "point", DataOrder="kji" )
    Data        = np.zeros( (ret.shape[0],6) )
    Data[:,0:3] = ret
    Data[:,  5] = np.ones ( (ret.shape[0]) ) * 0.5 + np.random.rand( ret.shape[0] ) * 0.1

    import nkUtilities.save__pointFile as spf
    outFile     = "out_point.dat"
    spf.save__pointFile( outFile=outFile, Data=Data )

    outFile     = "out_cst.dat"
    with open( outFile, "w" ) as f:
        f.write( header1 + "\n" )
        f.write( header2 + "\n" )
        np.savetxt( f, Data )


    
    
# ======================================== #
# ===  実行部                          === #
# ======================================== #
if ( __name__=="__main__" ):
    sample__vectorData()
