import numpy as np

# ========================================================= #
# ===  solve__quadraticEq.py                            === #
# ========================================================= #

def solve__quadraticEq( coef=None ):

    a_, b_ , c_ = 0, 1, 2

    # ------------------------------------------------- #
    # --- [1] Arguments                             --- #
    # ------------------------------------------------- #
    if ( coef is None ): sys.exit( "[solve__quadraticEq.py] coef == ???" )

    # ------------------------------------------------- #
    # --- [2] calculation                           --- #
    # ------------------------------------------------- #
    denom   = 1.0 / ( 2.0*coef[a_] )
    answer1 = -1 * coef[b_] + np.sqrt( coef[b_]**2 - 4.0*coef[a_]*coef[c_] ) * denom
    answer2 = -1 * coef[b_] - np.sqrt( coef[b_]**2 - 4.0*coef[a_]*coef[c_] ) * denom
    answer  = [ answer1, answer2 ]
    return( answer )


# ========================================================= #
# ===   実行部                                          === #
# ========================================================= #
if ( __name__=="__main__" ):
    coef = [ 1.0, -2.0, +1.0 ]
    ret  = solve__quadraticEq( coef=coef )
    print( ret )
