import numpy                    as np
import nkUtilities.load__config as lcf


# ========================================================= #
# ===  make__histogram.py                               === #
# ========================================================= #

def make__histogram( Data=None, config=None, bins=None, range=None, pngFile=None, draw=True ):
    
    # ------------------------------------------------- #
    # --- [1] Arguments                             --- #
    # ------------------------------------------------- #

    if ( Data    is None ): sys.exit( "[draw__histogram.py] Data == ???" )
    if ( config  is None ): config  = lcf.load__config()
    
    # ------------------------------------------------- #
    # --- [2] make histogram                        --- #
    # ------------------------------------------------- #
    
    hist, bound = np.histogram( Data=Data, bins=bins, range=range )
    axis        = 0.5 * ( bound[:-1] + bound[1:] )
    
    # ------------------------------------------------- #
    # --- [3] plotting                              --- #
    # ------------------------------------------------- #
    if ( draw ):
        if ( pngFile is None ): sys.exit( "[draw__histogram.py] draw__ " )

        fig = pl1.plot1D( pngFile=pngFile, config=config )
        fig.add__hist( xAxis=axis, yAxis=hist )
        fig.set__axis()
        fig.save__figure()

    # ------------------------------------------------- #
    # --- [4] return                                --- #
    # ------------------------------------------------- #
    return( hist, axis )
    

# ========================================================= #
# ===   実行部                                          === #
# ========================================================= #
if ( __name__=="__main__" ):
    sample_Data = np.random.normal( loc=0.2, scale=1.0, size=101 )
    histo       = make__histogram( Data=sample_Data )
