program main
  use mt19937
  ! use mt19937Mod
  implicit none
  ! integer(kind=lk) :: seed
  integer :: seed

  ! ------------------------------------------------------ !
  ! --- [1] initialize                                 --- !
  ! ------------------------------------------------------ !
  ! seed = 10_lk
  seed = 10
  call sgrnd( seed )

  ! ------------------------------------------------------ !
  ! --- [2] generate samples                           --- !
  ! ------------------------------------------------------ !
  write(6,*) grnd()
  write(6,*) grnd()
  write(6,*) grnd()
  write(6,*) grnd()
  

end program main
